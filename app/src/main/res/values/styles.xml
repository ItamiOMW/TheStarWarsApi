<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="SearchStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/search_view_bg</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LinearLayoutTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>



